= form_for(@critic_opinion) do |f|
  - if @critic_opinion.errors.any?
    #error_explanation
      %h2
        = pluralize(@critic_opinion.errors.count, "error")
        prohibited this critic_opinion from being saved:
      %ul
        - @critic_opinion.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :like
    %br
    = f.text_field :like
  .field
    = f.label :user_id
    %br
    = f.text_field :user_id
  .field
    = f.label :critic_id
    %br
    = f.number_field :critic_id
  .actions
    = f.submit
