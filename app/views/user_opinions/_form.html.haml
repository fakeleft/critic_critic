= form_for(@user_opinion) do |f|
  - if @user_opinion.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_opinion.errors.count, "error")
        prohibited this user_opinion from being saved:
      %ul
        - @user_opinion.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :like
    %br/
    = f.text_field :like
  .field
    = f.label :user_id
    %br/
    = f.text_field :user_id
  .field
    = f.label :movie_id
    %br/
    = f.number_field :movie_id
  .actions
    = f.submit