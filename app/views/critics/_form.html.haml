= form_for(@critic) do |f|
  - if @critic.errors.any?
    #error_explanation
      %h2
        = pluralize(@critic.errors.count, "error")
        prohibited this critic from being saved:
      %ul
        - @critic.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :url
    %br
    = f.text_field :url
  .field
    = f.label :publication
    %br
    = f.text_field :publication
  .actions
    = f.submit